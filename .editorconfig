# EditorConfig configuration for OBS-WebRTC-Link
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source and header files
[*.{cpp,hpp,h,c,cc,cxx}]
indent_style = space
indent_size = 4
max_line_length = 100

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# Python files
[*.py]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_style = space
indent_size = 2

# Dependencies (don't enforce formatting)
[deps/**]
trim_trailing_whitespace = unset
insert_final_newline = unset

# Build output (don't enforce formatting)
[build/**]
trim_trailing_whitespace = unset
insert_final_newline = unset
